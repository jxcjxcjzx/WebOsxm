});
/** 加载评论 */
function showComment(eid, pages) {
	$.ajax({
		type:"POST",
		url:"/eyan/ajax_get_comment_zk/",
		data:"eid="+eid+"&pages="+pages,
		dataType:"json",
		success:function(json){     
			$('.pl_detail_'+eid).html(json.msg);
			if(json.status == 1) {
				$('.view-page_'+eid).html(json.pagenation).show();
			} else {
				$('.view-page_'+eid).hide();
			}
		}
	});    
}
function delcomment(commentid, eyanid)
{
	if( confirm("确定要删除此评论吗？") ){
		var comnum = parseInt($("#comnum").text())-1;
		$.ajax({
			type:"GET",
			url:"/comment/delcomment/",
			data:"commentid="+commentid+"&eyanid="+eyanid,
			success:function(json){
				if(json=='1')
				{
					alert("删除成功！");
					$("#comnum").html(comnum);
					$("#clear"+commentid).remove();
				}else{
					alert("删除失败！");	
				}
			}
		});	
	}
	
}

function delreply(replyid, commentid)
{
	if(confirm("确定要删除此回复吗？")){
		var repnum = parseInt($("#repnum"+commentid).text()) - 1;
		$.ajax({
			type:"GET",
			url:"/reply/delreply/",
			data:"commentid="+commentid+"&replyid="+replyid,
			success:function(json){
				if(json=='1')
				{
					alert("删除成功！");
					$("#repnum"+commentid).html(repnum);
					$("#rep"+replyid).remove();
				}else{
					alert("删除失败！");	
				}
			}
		});	
	}
}
</script>
