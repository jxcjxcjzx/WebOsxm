/** ADS */
var swf1 = 'http://www.cio.com.cn/source/ads/1.html';
var swf2 = 'http://www.cio.com.cn/source/ads/2.html';

$(function() {
    /** 加载文章评论 */
    // $('.comment-box').each(function() {
        // var o = $(this);
        // var e = o.find('.comment-id').val();
        // $.getJSON( 'http://www.cio.com.cn/index/ajax_get_comment', {eid: e}, function(json) {
            // o.html(json.message);
            // o.find('.comment:first').show();
            // o.find('.clist li:first').addClass('ch');

            // $('.clist li').mouseover(function(){
                // var parent = $(this).parent();
                // var num = $('li', parent).index(this);
                // $(this).addClass('ch').siblings('li').removeClass('ch');
               
                // var $comments = parent.siblings('.comment');
                // $comments.hide();
                // $comments.eq(num).show();
            // });
        // });
    // });
	
	setInterval('setTabSwf()', 5500);

    /** 切换文章评论 */
    $('#index li').each(function(i) {
        $(this).click(function() {
	  if( i )
	  { 
            $(this).addClass('bh2').siblings().removeClass('bh');
          }
	  else
	  {
            $(this).addClass('bh').siblings().removeClass('bh2');
	  }
            $('.barb').hide().eq(i).show();
            var topic = $('.barb').eq(1);
            if( ! topic.is(':hidden') ) {
                if( topic.find('.xli').length == 0 ) {
                    showTopic(0, 1);
                }
            }
        });
    });
    
    /** 获取电子杂志栏目 */
    $('#topic-tag-list a').click(function() {
        $(this).css('fontWeight', 'bold').siblings().css('fontWeight', 'normal');
    });
    
        // showdiaboxs('注册 e 行网，免费畅游九寨沟', '<div"><a href="http://www.cio.com.cn/special/songli/jp.html" target="_blank"><img src="/source/images/index_ad.jpg"></a></div>', 858, false);
    // $('#_showdiaboxs').css({position:'absolute', top:8});
    
});

/** 加载电子杂志 */
function showTopic(topic, pages) {
    $('#cio-view-page').hide();
    $('#cio-view-list').html('<div class="loading"><img src="http://www.cio.com.cn/source/images/onloading.gif" title="正在加载，请稍后..." /></div>');
    $.getJSON( 'http://www.cio.com.cn/index/ajax_get_list', {topic: topic, pages: pages}, function(json) {
        $('#cio-view-list').html(json.data);
        if(json.status == 1) {
            $('#cio-view-page').html(json.message).show();
        } else {
            $('#cio-view-page').hide();
        }
    });
}

/** SHOW ADS */
function setTabSwf() {
	var src = $('#swf-view-box').attr('src');
	var swf = (src == swf1) ? swf2 : swf1;
	$('#swf-view-box').attr('src', swf);
}

