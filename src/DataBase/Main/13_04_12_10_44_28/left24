function showTops( t_no )
{
	$$("#tabs li").each(function(e){	
		if("tab_"+t_no == e.id){
			 !e.hasClass( "action" ) && e.addClass( "action" );
	  	 top10_tab_nomber = t_no;	
	     } else {
      e.removeClass( "action" );
    }
	});
	for ( var i=0; i < 1 ; i++) {
	  $('t_'+i).setStyle( "display","none" );
  }
  $('t_'+t_no).setStyle( "display","" );
  
	showtopbytime(0);
}
