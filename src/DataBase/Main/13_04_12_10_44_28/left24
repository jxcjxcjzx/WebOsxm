function showtopbytime( the_id )
{
	$$("#f_t_id a").each(function(e){
		if("f_t_"+the_id == e.id){
			 !e.hasClass( "curr" ) && e.addClass( "curr" );
	     } else {
      e.removeClass( "curr" );
    }
	});
	
	for ( var i=0; i < 4 ; i++) {
	  $('ul_'+top10_tab_nomber+'_'+i).setStyle( "display","none" );
	}
	$('ul_'+top10_tab_nomber+'_'+the_id).setStyle( "display","" );  
}
