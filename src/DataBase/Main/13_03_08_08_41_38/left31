function tishi()
{
	showtipsclose();
	showdiaboxs(LOGIN.title, LOGIN.content, 650, false);
}

document.onkeydown = function(evt) {
    var evt = window.event ? window.event : evt;
    if (evt.keyCode == 13) {
        var ac = document.activeElement.id;
		if(ac == 'srch') {
            document.getElementById('srchbt').click();  
        } 
        // return false;
    }
}

</script>
