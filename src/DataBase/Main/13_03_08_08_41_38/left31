$(function(){
// 首页文章的展开与收起
	$(".zk").live('click',function(){
		$(this).parent().parent().css('display','none');
		$(this).parent().parent().next().css('display','block');
		//dump($abc);
	});

	$(".sq").live('click',function(){
		$(this).closest('div').css('display','none');
		$(this).closest('div').prev('div').css('display','block');
		//$abc = $(this).closest('div').prev('div');//.parent().prev();
		// dump($abc);
	});	

// 首页文章的评论 显示与隐藏
	$(".showpl").live('click', function() {
		$(this).toggle(function(i) {
			var eid = $(this).attr('name');
			$(".comcell").css('display','block');			
			$(".pl_detail_"+eid).css('display','block');	
			$(".editor_"+eid).css('display','block');	
			$(".view-page_"+eid).css('display','block');
			showComment(eid, 1);
		},
		function(i) {                  
			var eid = $(this).attr('name');  
			$(".comcell").css('display','none');
			$(".pl_detail_"+eid).css('display','none');	
			$(".editor_"+eid).css('display','none');	
			$(".view-page_"+eid).css('display','none');
			
		});
		$(this).trigger('click');	
	});
	/*
	$(".showpl").toggle(function(){		
		var eid = $(this).attr('name');			
			$(".comcell").css('display','block').siblings('.comcell').css('display','none');			
			$(".pl_detail_"+eid).css('display','block');	
			$(".editor_"+eid).css('display','block');	
