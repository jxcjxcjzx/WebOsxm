  	function csMarquee(){  
   		if((document.getElementById("csdemo1").offsetHeight+15)-document.getElementById("csdemo").scrollTop<=0) {  
    		document.getElementById("csdemo").scrollTop = 0;
   		} else {  
    		document.getElementById("csdemo").scrollTop++;
   		}  
  	}  
  	var csMyMar=setInterval(csMarquee,csspeed);
  	document.getElementById("csdemo").onmouseover=function() {clearInterval(csMyMar);csMyMar=null;}  
