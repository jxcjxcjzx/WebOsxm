;(function($){
       $("#Top10 .header").css({"border-top":"2px solid #000","margin-top":"20px"});
       var changeHeight = function( obj , h ){
		$(obj).animate({"height":h},500)
	}

	//$(".voteOut").css({"height":370,"overflow":"hidden","margin-bottom":20,"padding-bottom":20});
	
	var a = 0;
	$("#openVote").click(function( ){
		if( a == 0 ){
			var h = $("#voteCenter").height();
			changeHeight( ".voteOut" , h ); 
			//$("#openP").css({"bottom":"0"});
			$("#openVote").html("收起 >>");
            $(".voteOut").css("border-bottom","none")
			a = 1;
		}else{
                        if(navigator.userAgent.indexOf("MSIE")>0){
				var minH = "410px";
			}else{
				minH = "400px";
			}
			changeHeight( ".voteOut" , minH ); 
			$("#openVote").html("查看全部选项 >>");
			//$("#openP").css({"bottom":"10px"});
            $(".voteOut").css("border-bottom","2px solid #CCC")
			a = 0
		}
	});
})(jQuery);
